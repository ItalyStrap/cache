<?xml version="1.0"?>
<psalm
    totallyTyped="false"
    errorLevel="1"
    resolveFromConfigFile="true"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src" />
        <directory name="storage" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <issueHandlers>
        <UndefinedFunction>
            <errorLevel type="suppress">
                <referencedFunction name="get_transient"/>
                <referencedFunction name="set_transient"/>
                <referencedFunction name="delete_transient"/>
                <referencedFunction name="get_option"/>
                <referencedFunction name="add_option"/>
                <referencedFunction name="update_option"/>
                <referencedFunction name="delete_option"/>
                <referencedFunction name="wp_cache_get"/>
                <referencedFunction name="wp_cache_set"/>
                <referencedFunction name="wp_cache_replace"/>
                <referencedFunction name="wp_cache_delete"/>
                <referencedFunction name="wp_cache_incr"/>
                <referencedFunction name="wp_cache_decr"/>
                <referencedFunction name="wp_cache_flush"/>
                <referencedFunction name="wp_cache_set_multiple"/>
                <referencedFunction name="wp_cache_get_multiple"/>
                <referencedFunction name="wp_cache_delete_multiple"/>
            </errorLevel>
        </UndefinedFunction>
    </issueHandlers>
</psalm>
